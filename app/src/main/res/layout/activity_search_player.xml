<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".SearchPlayerActivity">

  <TextView
      android:id="@+id/textViewPlayerId"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Id:"
      android:textSize="18sp" />

  <EditText
      android:id="@+id/editTextPlayerId"
      android:layout_width="45dp"
      android:layout_height="wrap_content"
      android:layout_toRightOf="@id/textViewPlayerId"
      android:layout_marginStart="8dp"
      android:inputType="number"
      android:hint="Id" />

  <Button
      android:id="@+id/buttonSearch"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/editTextPlayerId"
      android:layout_marginTop="16dp"
      android:layout_centerHorizontal="true"
      android:text="Pesquisar" />

  <TextView
      android:id="@+id/textViewPlayerName"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/buttonSearch"
      android:layout_marginTop="32dp"
      android:text="Nome:"
      android:textSize="18sp" />

  <TextView
      android:id="@+id/textViewTeamName"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/textViewPlayerName"
      android:layout_marginTop="8dp"
      android:text="Time:"
      android:textSize="18sp" />

  <TextView
      android:id="@+id/textViewPosition"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/textViewTeamName"
      android:layout_marginTop="8dp"
      android:text="Posição:"
      android:textSize="18sp" />

</RelativeLayout>
